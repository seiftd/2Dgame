# Telegram Bot Token
BOT_TOKEN=your_bot_token_here

# Admin credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_password

# Database
DB_PATH=./database/game.db

# Server
PORT=3000
NODE_ENV=development

# Payment APIs
BINANCE_PAY_API_KEY=your_binance_api_key
TON_API_KEY=your_ton_api_key
