{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "ü§ñ Debug Bot",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/bot.js",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "runtimeArgs": [
                "--inspect"
            ]
        },
        {
            "name": "üõ°Ô∏è Debug Admin Server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "runtimeArgs": [
                "--inspect"
            ]
        },
        {
            "name": "üîß Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ],
    "compounds": [
        {
            "name": "üöÄ Debug Both (Bot + Admin)",
            "configurations": [
                "ü§ñ Debug Bot",
                "üõ°Ô∏è Debug Admin Server"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "debugging",
                "order": 1
            }
        }
    ]
}